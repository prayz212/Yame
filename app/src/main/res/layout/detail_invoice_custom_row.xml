<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgItems"
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvItemsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T-shirt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgItems"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvItemsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R123471241928"
        app:layout_constraintTop_toBottomOf="@id/tvItemsType"
        app:layout_constraintStart_toEndOf="@+id/imgItems"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvItemsPrice"
        android:text="$699000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgItems"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/tvQuanlity"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="So luong: 2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>